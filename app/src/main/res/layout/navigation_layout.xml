<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/view_step_navigation"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:showIn="@layout/fragment_view_step"
        >

    <ImageView
            android:id="@+id/view_step_back"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="@dimen/medium_padding"
            android:src="@drawable/selector_chevron_left"
            />

    <ImageView
            android:id="@+id/view_step_forward"
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="@dimen/medium_padding"
            android:src="@drawable/selector_chevron_right"
            />

</FrameLayout>